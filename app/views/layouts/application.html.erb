<!DOCTYPE html>
<html>
    <head>
        <title>BaseMatch</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>
    <body>
        <header>
            <div class="container">
                <div class="header_logo">Base Match</div>
                <p class="flash_message"><%= flash[:notice] %></p>
                <nav>
                    <ul class="nav_list">
                        <% if player_signed_in? %>
                            <li class="nav_list_item">
                                <%= link_to "当サイトについて", root_path %>
                            </li>
                            <li class="nav_list_item">
                                <%= link_to "マイページ", player_player_path(current_player) %>
                            </li>
                            <li class="nav_list_item">
                                <%= link_to "チーム", player_teams_path %>
                            </li>
                            <li class="nav_list_item">
                                <%= link_to "投稿", player_posts_path %>
                            </li>
                            <li class="nav_list_item">
                                <%= link_to "ブックマーク", player_bookmarks_path %>
                            </li>
                            <li class="nav_list_item">
                                <%= link_to "ログアウト", destroy_player_session_path, method: :delete %>
                            </li>
                        <% elsif team_signed_in? %>
                            <li class="nav_list_item">
                                <%= link_to "当サイトについて", root_path %>
                            </li>
                            <li class="nav_list_item">
                                <%= link_to "マイチーム", team_team_path(current_team) %>
                            </li>
                            <li class="nav_list_item">
                                <%= link_to "新規投稿", new_team_post_path %>
                            </li>
                            <li class="nav_list_item">
                                <%= link_to "チーム一覧", team_teams_path %>
                            </li>
                            <li class="nav_list_item">
                                <%= link_to "投稿一覧", team_posts_path %>
                            </li>
                            <li class="nav_list_item">
                                <%= link_to "ログアウト", destroy_team_session_path, method: :delete %>
                            </li>
                        <% else %>
                            <li class="nav_list_item">
                                <%= link_to "当サイトについて", root_path %>
                            </li>
                            <li class="nav_list_item">
                                <%= link_to "新規登録", new_player_registration_path %>
                            </li>
                            <li class="nav_list_item">
                                <%= link_to "ログイン", player_session_path %>
                            </li>
                        <% end %>
                    </ul>
                </nav>
            </div>
        </header>
        <main>
            <%= yield %>
        </main>
        <footer>
            <section id="about_contact">
                <h1 class="footer_section_title">Contact</h1>
                <div class="contact_area">
                    <div class="contact_left">
                        <table width="350">
                            <tr>
                                <th>Email</th>
                                <td>xxx@xxx.com</td>
                            </tr>
                            <tr>
                                <th>Tell</th>
                                <td>080-xxxx-xxxx</td>
                            </tr>
                        </table>
                    </div>
                    <div class="contact_right">
                        <i class="fab fa-instagram"></i>
                        <i class="fab fa-twitter"></i>
                        <i class="fab fa-facebook-f"></i>
                    </div>
                </div>
            </section>
        </footer>
    </body>
</html>
