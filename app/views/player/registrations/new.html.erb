<div class="container">
    <h3 class="page_title">新規選手会員登録</h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <table class="player_table" width="500">
            <tr>
                <th><%= f.label :name, "アカウント名" %></th>
                <td><%= f.text_field :name, autofocus: true, placeholder: "(例)野球太郎" %></td>
                <!-- autofocus: trueによりページ表示後に自動でカーソルがnameに合っているようになる -->
            </tr>
            <tr>
                <th><%= f.label :prefecture_code, "都道府県" %></th>
                <td><%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name %></td>
            </tr>
            <tr>
                <th><%= f.label :email, "メールアドレス" %></th>
                <td><%= f.email_field :email, autocomplete: "email", placeholder: "(例)base_match@gmail.com" %></td>
            </tr>
            <tr>
                <th><%= f.label :password, "パスワード(6文字以上)" %></th>
                <td><%= f.password_field :password, placeholder: "パスワード" %></td>
            </tr>
            <tr>
                <th><%= f.label :password_confirmation, "パスワード(確認用)" %></th>
                <td><%= f.password_field :password_confirmation, placeholder: "パスワード確認用" %></td>
            </tr>
            <tr>
                <th></th>
                <td><%= f.submit "新規登録", class: "btn submit" %></td>
            </tr>
        </table>
    <% end %>
</div>