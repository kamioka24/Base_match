    <%= link_to "チーム登録はこちら", new_team_registration_path, class: "main_btn team_sign_up_btn" %>
    <%= link_to "選手ログインはこちら", player_session_path, class: "main_player_login" %>
    <%= link_to "チームログインはこちら", team_session_path, class: "main_team_login" %>
	<div class="main_left">
