<div class="container">
	<% if params[:team].nil? %>
		<h1 class="page_title">投稿一覧</h1>
	<% else %>
		<h1 class="page_title"><%= @post.team.name %>さんの投稿一覧</h1>
	<% end %>
	<table width="600" class="post_table">
		<thead>
			<tr>
				<th>投稿日</th>
				<th>タイトル</th>
				<th>チーム名</th>
			</tr>
		</thead>
		<% @posts.each do |post| %>
			<tbody>
				<tr>
					<td><%= post.created_at.strftime("%Y/%m/%d") %></td>
					<td><%= link_to post.title, player_post_path(post) %></td>
					<td><%= post.team.name %></td>
				</tr>
			</tbody>
		<% end %>
	</table>
</div>