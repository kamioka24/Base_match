<div class="container">
	<%= link_to @post.team.name, player_team_path %>
	<%= link_to "入団または体験を希望する", root_path %> <!-- コンタクトを作成するまでとりあえず -->
	<div class="post_show_box">
		<div class="post_title">
			<%= @post.title %>
		</div>
		<div class="post_date">
			<%= @post.created_at.strftime("%Y/%m/%d") %>
		</div>
		<div class="post_body">
			<%= @post.body %>
		</div>
		<div class="post_img">
			<%= attachment_image_tag @post, :post_image, :fill, 800, 500 %>
		</div>
	</div>
	<%= link_to "一覧へ戻る", team_posts_path %>
</div>