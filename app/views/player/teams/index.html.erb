<div class="container">
	<h1 class="page_title">チーム一覧</h1>
	<%= search_form_for @q, url: player_teams_path, class: "seach" do |f| %>
		<%= f.search_field :name_or_prefecture_code_or_city_cont, class: "seach_form", placeholder: "検索" %>
		<%= button_tag type: "submit" do %>
            <i class="fas fa-search"></i>
        <% end %><br>
		<%= f.radio_button :category_eq, '', {:checked => true} %>指定なし
		<%= f.radio_button :category_eq, 0 %>硬式
		<%= f.radio_button :category_eq, 1 %>軟式
	<% end %>
	<table width="600" class="team_table">
		<thead>
			<tr>
				<th>市区町村</th>
				<th>チーム名</th>
				<th>人数</th>
				<th></th>
			</tr>
		</thead>
		<% @teams.each do |team| %>
			<tbody>
				<tr>
					<td><%= team.city %></td>
					<td><%= link_to team.name, player_team_path(team) %></td>
					<td><%= team.member %></td>
					<% if team.bookmarked_by?(current_player) %>
						<%= link_to player_bookmark_path(team), method: :delete, remote: true do %>
							<!-- remote: trueでコントローラにJSのリクエストを送る -->
							<td><i class="fas fa-star" style="color: yellow;"></i></td>
						<% end %>
					<% else %>
						<%= link_to player_bookmarks_path(team), method: :post, remote: true do %>
							<td><i class="far fa-star"></i></td>
						<% end %>
					<% end %>
				</tr>
			</tbody>
		<% end %>
	</table>
</div>