<div class="container">
	<div class="message_area">
		<h1 class="complete_message">
			メール送信が完了しました！
		</h1>
		<h2 class="complete_sub_message">
			<%= link_to @team.name, player_team_path(@team) %>さんからのご連絡をお待ちください。
		</h2>
		<%= link_to "もっとチームを探す", player_teams_path, class: "btn complete_back_btn" %>
	</div>
	<% @team_picup.each do |team_picup| %>
		<div class="team_box">
			<%= link_to player_team_path(team_picup.team) do %>
				<%= attachment_image_tag team_picup, :team_image, :fill, 200, 130 %><br>
				<p class="team_box_name"><%= team.name %></p>
			<% end %>
			<div class="team_box_bottom">
				・<%= team_picup.prefecture_name %><%= team_picup.city %><br>
				・<%= team_picup.category %><br>
				・<%= team_picup.member %>人
			</div>
		</div>
	<% end %>
</div>