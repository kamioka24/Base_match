<div class="container">
	<div class="row">
		<div class="page_top">
			<h1 class="page_title">マイページ
				<% if @player == current_player %>
					<%= link_to edit_player_player_path do %>
						<i class="fa fa-cog"></i>
					<% end %>
				<% end %>
			</h1>
		</div>
		<div class="col-xs-4">
			<table width="350" class="mypage_table">
				<thead>
					<tr>
						<th colspan="3">新着情報</th>
					</tr>
				</thead>
				<% @posts.each do |post| %>
					<% if post.team.prefecture_code == @player.prefecture_code %>
						<tbody>
							<tr>
								<td><%= post.created_at.strftime("%Y/%m/%d") %></td>
								<td><%= link_to post.title, player_post_path(post) %></td>
								<td><%= post.team.name %></td>
							</tr>
						</tbody>
					<% end %>
				<% end %>
			</table>
		</div>
		<div class="col-xs-8">
			<h2>お近くのチーム(<%= @player.prefecture_code %>)</h2>
			<div class="near_team">
				<% @teams.each do |team| %>
					<% if team.prefecture_code == @player.prefecture_code %>
						<div class="team_box">
							<%= link_to player_team_path(team) do %>
								<%= attachment_image_tag team, :team_image, :fill, 200, 130 %><br>
								<%= team.name %>
							<% end %><br>
							・<%= team.city %><br>
							・<%= team.category %><br>
							・<%= team.member %>人
						</div>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>