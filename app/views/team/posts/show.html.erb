<div class="container">
	<h1 class="page_title">投稿詳細</h1>
	<% if @post == current_team %>
		<%= link_to "編集する", edit_team_post_path %>
	<% end %>
	<div class="post_show">
		<%= @post.title %>
		<%= @post.created_at.strftime("%Y/%m/%d") %>
		<%= @post.body %>
		<%= attachment_image_tag @post, :post_image, :fill, 800, 500 %>
	</div>
	<%= link_to "一覧へ戻る", team_posts_path %>
</div>