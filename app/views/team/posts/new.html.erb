<div class="container">
	<div class="row">
		<h1 class="page_title">新規投稿</h1>
		<%= form_for(@post, url: team_posts_path) do |f| %>
			<div class="col-xs-6">
				<%= f.attachment_field :post_image %>
			</div>
			<div class="col-xs-6">
				<% if @post.errors.any? %>
					<%= @post.errors.count %>error prohibited this post from being saved:<br>
						<ul>
						<% @post.errors.full_messages.each do |message| %>
							<li><%= message %></li>
						<% end %>
						</ul>
				<% end %>
				<%= f.label :title, "タイトル" %><br>
				<%= f.text_field :title, class: "post_title_form" %><br>
				<%= f.label :body, "本文" %><br>
				<%= f.text_area :body, class: "post_body_form" %><br>
				<%= f.submit "投稿", class: "btn submit" %>
			</div>
		<% end %>
	</div>
</div>