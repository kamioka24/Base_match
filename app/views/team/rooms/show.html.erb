<div class="container">
    <h1>チャット</h1>

    <h4>参加者</h4>
    <% @entries.each do |entry| %>
        <h5><strong><%= link_to entry.team.name, team_team_path(entry.team) %>さん</strong></h5>
    <% end %>

    <hr>
    <% if @messages.present? %>
        <% @messages.each do |message| %>
            <strong><%= message.content %></strong>
            <small>by <strong><%= link_to message.team.name, team_team_path(message.team) %>さん</strong></small>
            <hr>
        <% end %>
    <% else %>
        <h3 class="text_center">メッセージはまだありません</h3>
    <% end %>

    <%= form_for(@message, url: team_messages_path) do |f| %>
        <%= f.text_field :content, :placeholder => "メッセージを入力して下さい" , :size => 70 %>
        <%= f.hidden_field :room_id, :value => @room.id %><br>
        <%= f.submit "投稿する" %>
    <% end %>

    <%= link_to "チーム一覧に戻る", team_teams_path %>
</div>