<div class="container">
    <div class="row">

        <h3 class="page_title">新規チーム会員登録</h3>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="col-xs-6">
                <table class="team_signup_table" width="500">
                    <tr>
                        <th><%= f.attachment_field :team_image %></th>
                    </tr>
                    <tr>
                        <th><%= f.label :introduction, "チーム紹介文" %></th>
                    </tr>
                    <tr>
                        <th class="introduction_area"><%= f.text_area :introduction %></th>
                    </tr>
                </table>
            </div>

            <div class="col-xs-6">
                <%= render "devise/shared/error_messages", resource: resource %>

                <table class="team_signup_table" width="500">
                    <tr>
                        <th><%= f.label :name, "チーム名" %></th>
                        <td><%= f.text_field :name, autofocus: true, placeholder: "(例)◯◯ボーイズ" %></td>
                        <!-- autofocus: trueによりページ表示後に自動でカーソルがnameに合っているようになる -->
                    </tr>
                    <tr>
                        <th><%= f.label :member, "人数(数字のみ)" %></th>
                        <td><%= f.text_field :member, placeholder: "(例)25" %>人</td>
                    </tr>
                    <tr>
                        <th><%= f.label :category, "カテゴリー" %></th>
                        <td>
                            <%= f.radio_button :category, :硬式 %><%= f.label :category, :硬式 %>
                            <%= f.radio_button :category, :軟式 %><%= f.label :category, :軟式 %>
                        </td>
                    </tr>
                    <tr>
                        <th><%= f.label :prefecture_code, "都道府県" %></th>
                        <td><%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name %></td>
                    </tr>
                    <tr>
                        <th><%= f.label :city, "市区町村" %></th>
                        <td><%= f.text_field :city, placeholder: "(例)深谷市" %></td>
                    </tr>
                    <tr>
                        <th><%= f.label :street, "番号・番地" %></th>
                        <td><%= f.text_field :street, placeholder: "(例)高畑1-1" %></td>
                    </tr>
                    <tr>
                        <th><%= f.label :phone_number, "電話番号(ハイフンなし)" %></th>
                        <td><%= f.text_field :phone_number, placeholder: "(例)08012345678" %></td>
                    </tr>
                    <tr>
                        <th><%= f.label :email, "メールアドレス" %></th>
                        <td><%= f.email_field :email, autocomplete: "email", placeholder: "(例)base_match@gmail.com" %></td>
                    </tr>
                    <tr>
                        <th><%= f.label :password, "パスワード(6文字以上)" %></th>
                        <td><%= f.password_field :password, placeholder: "パスワード" %></td>
                    </tr>
                    <tr>
                        <th><%= f.label :password_confirmation, "パスワード(確認用)" %></th>
                        <td><%= f.password_field :password_confirmation, placeholder: "パスワード確認用" %></td>
                    </tr>
                    <tr>
                        <th></th>
                        <td><%= f.submit "新規登録", class: "btn submit" %></td>
                    </tr>
                </table>
            </div>
        <% end %>
    </div>
</div>