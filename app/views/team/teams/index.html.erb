<div class="container">
	<h1 class="page_title">チーム一覧</h1>
	<%= search_form_for @q, url: team_teams_path, class: "seach" do |f| %>
		<%= f.search_field :name_or_prefecture_code_or_city_cont, class: "seach_form", placeholder: "検索" %>
		<%= button_tag type: "submit" do %>
            <i class="fas fa-search"></i>
        <% end %><br>
		<%= f.radio_button :category_eq, '', {:checked => true} %>指定なし
		<%= f.radio_button :category_eq, 0 %>硬式
		<%= f.radio_button :category_eq, 1 %>軟式
	<% end %>
	<table width="700" class="team_table">
		<thead>
			<tr>
				<th>都道府県</th>
				<th>市区町村</th>
				<th>チーム名</th>
				<th>カテゴリー</th>
				<th>人数</th>
			</tr>
		</thead>
		<% @teams.each do |team| %>
			<% if team != current_team %> <!-- 自チーム以外を表示 -->
				<tbody>
					<tr>
						<td><%= team.prefecture_code %></td>
						<td><%= team.city %></td>
						<td><%= link_to team.name, team_team_path(team) %></td>
						<td><%= team.category %></td>
						<td><%= team.member %></td>
					</tr>
				</tbody>
			 <% end %>
		<% end %>
	</table>
</div>